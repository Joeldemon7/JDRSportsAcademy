@page
@model JDRSportsAcademy.Pages.AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <p class="lead">
        Welcome to JDR Sports Academy. Our mission is to foster sportsmanship, teamwork, and excellence in our athletes. Below is a summary of the student participation across various fixture dates.
    </p>

    <h2 class="mt-4">Student Participation by Fixture Dates</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Student Count</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Fixtures != null && Model.Fixtures.Any())
                {
                    foreach (var item in Model.Fixtures)
                    {
                        <tr>
                            <td>@item.FixtureDate?.ToString("MMMM dd, yyyy")</td>
                            <td>@item.StudentCount</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center">No data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-5">
        <a href="/Fixtures" class="btn btn-primary">View All Fixtures</a>
    </div>
</div>

