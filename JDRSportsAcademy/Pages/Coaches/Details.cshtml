@page
@model JDRSportsAcademy.Pages.Coaches.DetailsModel

@{
    ViewData["Title"] = "Coach Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Coach Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coach.CoachName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coach.CoachName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coach.CoachNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coach.CoachNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coach.CoachEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coach.CoachEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coach.Sport.SportName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coach.Sport.SportName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Coach?.CoachID" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>


