@page
@model JDRSportsAcademy.Pages.Coaches.EditModel

@{
    ViewData["Title"] = "Edit Coach";
}

<h1>@ViewData["Title"]</h1>

<h4>Edit Coach</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Coach.CoachID" />
            <div class="form-group">
                <label asp-for="Coach.SportID" class="control-label"></label>
                <select asp-for="Coach.SportID" class="form-control" asp-items="Model.Sports"></select>
                <span asp-validation-for="Coach.SportID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coach.CoachName" class="control-label"></label>
                <input asp-for="Coach.CoachName" class="form-control" />
                <span asp-validation-for="Coach.CoachName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coach.CoachNumber" class="control-label"></label>
                <input asp-for="Coach.CoachNumber" class="form-control" />
                <span asp-validation-for="Coach.CoachNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coach.CoachEmail" class="control-label"></label>
                <input asp-for="Coach.CoachEmail" class="form-control" />
                <span asp-validation-for="Coach.CoachEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

