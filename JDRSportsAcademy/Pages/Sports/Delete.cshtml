@page
@model JDRSportsAcademy.Pages.Sports.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sport.SportName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sport.SportName)
        </dd>
    </dl>

    <form method="post" id="deleteForm">
        <input type="hidden" asp-for="Sport.SportID" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirmDelete();" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this sport? This action cannot be undone.');
        }
    </script>
}

