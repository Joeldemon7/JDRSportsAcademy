@page
@model JDRSportsAcademy.Pages.Sports.IndexModel

@{
    ViewData["Title"] = "Sports List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New Sport</a>
</p>

<!-- Search Form -->
<form method="get" class="form-inline mb-2">
    <input type="text" name="SearchString" class="form-control mr-sm-2" placeholder="Search by Sport Name" value="@Model.SearchString" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- Sports Table -->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sport[0].SportName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sport)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SportName)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.SportID" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.SportID" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.SportID" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this sport?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


