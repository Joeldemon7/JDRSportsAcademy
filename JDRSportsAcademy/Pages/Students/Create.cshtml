@page
@model JDRSportsAcademy.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Create Student";
}

<h1>@ViewData["Title"]</h1>

<h4>Enter Student Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Student.FirstName" class="control-label">First Name</label>
                <input asp-for="Student.FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.LastName" class="control-label">Last Name</label>
                <input asp-for="Student.LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="Student.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.DOB" class="control-label">Date of Birth</label>
                <input asp-for="Student.DOB" class="form-control" type="date" />
                <span asp-validation-for="Student.DOB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.Gender" class="control-label">Gender</label>
                <select asp-for="Student.Gender" class="form-control">
                    <option value="">Select gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Student.Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.Address" class="control-label">Address</label>
                <textarea asp-for="Student.Address" class="form-control" placeholder="Enter address"></textarea>
                <span asp-validation-for="Student.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.ContactNumber" class="control-label">Contact Number</label>
                <input asp-for="Student.ContactNumber" class="form-control" placeholder="Enter contact number" />
                <span asp-validation-for="Student.ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.MedicalInformation" class="control-label">Medical Information</label>
                <textarea asp-for="Student.MedicalInformation" class="form-control" placeholder="Enter any relevant medical information"></textarea>
                <span asp-validation-for="Student.MedicalInformation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.Email" class="control-label">Email</label>
                <input asp-for="Student.Email" class="form-control" type="email" placeholder="Enter email address" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
