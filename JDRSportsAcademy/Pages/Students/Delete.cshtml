@page
@model JDRSportsAcademy.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "Delete Student";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @Model.ErrorMessage
    </div>
}

<h3>Are you sure you want to delete this student?</h3>

<div class="card">
    <div class="card-body">
        <h4>Student Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Student.FirstName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.FirstName)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Student.LastName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.LastName)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Student.DOB)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.DOB)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Student.Gender)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.Gender)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Student.Address)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.Address)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Student.ContactNumber)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.ContactNumber)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Student.MedicalInformation)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.MedicalInformation)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Student.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.Email)
            </dd>
        </dl>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Student.StudentID" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

